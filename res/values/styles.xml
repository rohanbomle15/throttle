<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:windowNoTitle">true</item> -->
    </style>

    <style name="Heading1" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Heading2" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Heading3" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Heading4" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Heading5" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Heading6" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btnOrange">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_orange_button</item>
    </style>

    <style name="btnGrey">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_gray_button</item>
    </style>

    <style name="btnOpenGallery">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_gray_button</item>
    </style>

    <style name="btnTakePhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_red_button</item>
    </style>

    <style name="btnText1" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btnTabText1" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="edit_text_with_icon">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:paddingLeft">40dip</item>
        <item name="android:background">@drawable/text_box_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="edit_text_icon_spacing">
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:background">@drawable/text_box_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="edit_text_multiline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:background">@drawable/text_box_bg</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="edit_text_area">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:padding">10dip</item>
        <item name="android:background">@drawable/text_box_bg</item>
        <item name="android:lines">10</item>
        <item name="android:gravity">top</item>
    </style>
	
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@drawable/text_box_bg</item>
    </style>
    
    <style name="MyListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="MyListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyListButtonAction">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="MyListImage">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:scaleGravity">fill</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="MyListTitle">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>