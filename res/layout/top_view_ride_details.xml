<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/imgRideDetailsBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/club_details_banner" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtRideNameDetails"
                style="@style/Heading5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride Name"
                android:textColor="@color/yellow_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRideDuration"
                style="@style/Heading5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRideName"
                android:text="00"
                android:textColor="@color/yellow_text_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="20dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtRideKmDetails"
                style="@style/Heading5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="0"
                android:textColor="@color/yellow_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRideKm"
                style="@style/Heading5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRideKmDetails"
                android:text="Km"
                android:textColor="@color/yellow_text_color"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>